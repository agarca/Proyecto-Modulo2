@model VideogamesCodex.Models.Videogames
@{
    ViewBag.Title = "Formulario Videogames";
}

<ol class="breadcrumb">
    <li><a href="~/">Create/Modify Game</a></li>
    <li class="active">@(Model.id == 0 ? Model.name : "New register")</li>
</ol>
@using (Html.BeginForm("Save", "Home", FormMethod.Post, new { id = "frm-videogames" }))
{
    @Html.HiddenFor(x => x.id)
    <div class="panel panel-default">
        <div class="panel-heading">Game Information</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(x => x.name)
                @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.name, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.publisher)
                @Html.TextBoxFor(x => x.publisher, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.publisher, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.year)
                @Html.TextBoxFor(x => x.year, new { @class = "form-control" })                
                @Html.ValidationMessageFor(x => x.year, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Genre")
                <select name="genre" class="form-control">
                    <option @(Model.Genre == Genres.Unknow ? "selected" : "" ) value="0">Unknow</option>
                    <option @(Model.Genre == Genres.Action ? "selected" : "" ) value="1">Action</option>
                    <option @(Model.Genre == Genres.Adventure ? "selected" : "" ) value="2">Adventure</option>
                    <option @(Model.Genre == Genres.Strategy ? "selected" : "" ) value="3">Strategy</option>
                    <option @(Model.Genre == Genres.RPG ? "selected" : "" ) value="4">RPG</option>
                    <option @(Model.Genre == Genres.Sport ? "selected" : "" ) value="5">Sport</option>
                </select>
            </div>
            <div class="form-group">
                @Html.Label("Platform")
                <select name="platform" class="form-control">
                    <option @(Model.Platform == Platforms.Unknow ? "selected" : "" ) value="0">Unknow</option>
                    <option @(Model.Platform == Platforms.PC ? "selected" : "" ) value="1">PC</option>
                    <option @(Model.Platform == Platforms.PS4 ? "selected" : "" ) value="2">PS4</option>
                    <option @(Model.Platform == Platforms.XBOXONE ? "selected" : "" ) value="3">XBOXONE</option>
                </select>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.score)
                @Html.TextBoxFor(x => x.score, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.score, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Online")
                @Html.CheckBoxFor(x => x.online)
            </div>
            <div class="form-group">
                @Html.Label("PEGI")
                <select name="pegi" class="form-control">
                    <option @(Model.Pegi == PEGI.Unkown ? "selected" : "" ) value="0">Unknow</option>
                    <option @(Model.Pegi == PEGI.PEGI3 ? "selected" : "" ) value="1">PEGI3</option>
                    <option @(Model.Pegi == PEGI.PEGI6 ? "selected" : "" ) value="2">PEGI6</option>
                    <option @(Model.Pegi == PEGI.PEGI12 ? "selected" : "" ) value="3">PEGI12</option>
                    <option @(Model.Pegi == PEGI.PEGI18 ? "selected" : "" ) value="4">PEGI18</option>
                </select>
            </div>            
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
